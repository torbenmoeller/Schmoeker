<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:id="@+id/text_view_item_name"
        android:layout_width="96dp"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"

        android:text="2"/>
    <TextView
        android:id="@+id/text_view_item_description"
        android:layout_width="96dp"
        android:layout_height="match_parent"
        android:layout_toEndOf="@+id/text_view_item_name"
        android:text="3" />

    <Button
        android:id="@+id/edit_feed"
        android:layout_width="96dp"
        android:layout_height="match_parent"
        android:layout_toStartOf="@+id/delete_feed"
        android:drawableLeft="@android:drawable/ic_menu_edit"
        android:text="@string/edit_feed" />

    <Button
        android:id="@+id/delete_feed"
        android:layout_width="96dp"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:drawableLeft="@android:drawable/ic_menu_delete"
        android:text="@string/delete_feed" />

</RelativeLayout>